{
  "private": true,
  "version": "1.0.0",
  "author": "Jonathan Olaleye",
  "proxy": "http://localhost:3001",
  "scripts": {
    "start": "node server/index.js",
    "start:server": "nodemon server/index.js",
    "start:client": "react-scripts start",
    "start:dev": "concurrently -k -n \"client,server,css\" -c \"cyan,magenta,blue\" \"npm run start:client\" \"npm run start:server\" \"npm run watch:css\"",
    "start:prod": "set NODE_ENV=production&& npm run start",
    "build": "npm run build:css && react-scripts build",
    "build:css": "node-sass-chokidar src/ -o src/ --include-path ./node_modules --include-path ./src --quiet",
    "watch:css": "npm run build:css && node-sass-chokidar src/ -o src/ --watch --include-path ./node_modules --include-path ./src --quiet",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "bulma": "^0.7.1",
    "express": "^4.16.3",
    "howler": "^2.0.12",
    "lodash": "^4.17.10",
    "node-sass-chokidar": "^1.2.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-scripts": "1.1.1",
    "sat": "^0.7.1",
    "socket.io": "^2.1.0",
    "socket.io-client": "^2.1.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "nodemon": "^1.17.1"
  }
}
